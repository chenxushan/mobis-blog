---
import { SITE_TITLE, SITE_EMAIL } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
            <div class="email">Email: {SITE_EMAIL}</div>
          </div>

          <div class="item products">
            <div class="item-title">作品</div>
            <a href="/" target="_blank">本站博客</a>
            <a href="https://the.top" target="_blank">TOP Link</a> 
          </div>

          <div class="item community">
            <div class="item-title">社媒</div>
            <a href="https://github.com/chenxushan" target="_blank">Github</a>
          </div>

          <div class="item resources">
            <div class="item-title">友链</div>
            <a href="https://the.top">THE.TOP</a>
          </div>
          <div class="item resources">
            <div class="item-title">公众号:电影音乐赏析</div>
            <!-- <img src="/preview/wechat_logo.png" alt="logo"> -->
            <div class="logo-card">
              <div class="logo-wrapper">
                <img
                  src="/preview/wechat_logo.png"
                  class="logo-cover-image"
                />
              </div>
              <img
                src="/preview/previewp.png"
                class="logo-character"
              />
              </div>
            </div>
            

        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          <img src="/preview/gaonganbeian.png"/>
          <a target="_blank" href="http://www.beian.gov.cn/portal/registerSystemInfo?recordcode=32059002004373">苏公网安备 32059002004373号</a><br>
          <a href="https://beian.miit.gov.cn/" target="_blank">苏ICP备2023009737号</a><br>
          &copy; {`2016-${year}  ${SITE_NAME}`} 
          <a href="https://github.com/chenxushan/mobis-blog">astro-mobius</a>
        </div>
      </div>
      <!-- <div class="bottom">
        <div class="copyright">
          
        </div>
      </div> -->
    </div>
  </div>
</div>
